<div class="col-md-4 col-md-offset-4">
  <%= image_tag @picture.image.thumb.url.to_s %>
  <h3><%= @picture.title %></h3>
  <p><%= @picture.description %></p>
  <h4>Submitted by <%= @picture.owner.name %></h4>
  <div class="btn-group pull-left">
    <% if @picture.editable_by?(current_user)%>
      <%= link_to("Back", pictures_path, class: "btn btn-default")%>
      <%= link_to("Edit", edit_picture_path(@picture), class: "btn btn-warning")%>
      <%= link_to("Delete", picture_path(@picture),
                  method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger")%>
      <%= link_to(@picture.like_amount, like_picture_path(@picture), method: :post, class: "glyphicon glyphicon-heart ")%>
    <% else %>
      <%= link_to("Back", pictures_path, class: "btn btn-default")%>
      <%= link_to(@picture.like_amount, like_picture_path(@picture), method: :post, class: "glyphicon glyphicon-heart ")%>
    <% end %>
  </div>
</div>
